# Maintainer: Alexander V. Buev <alexander.buev@gmail.com>

pkgname=pocket
pkgrel=1
pkgver=v0.2.3.r61.g1a5e183
pkgdesc="Pocket - hasher-priv based package build system"
arch=('i686' 'x86_64')
license=('GPL3')
url="http://"
groups=('base')
depends=('hasher-priv' 'debootstrap' 'debian-archive-keyring' 'dpkg')
makedepends=('help2man')
builddepends=('autoconf' 'automake')
source=(git+https://github.com/wolneykien/pocket.git)
md5sums=('SKIP')

pkgver() {
  cd "$pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd ${srcdir}/${pkgname}/${pkgname}
  patch -p0 < ../../../hasher-path.diff
  autoreconf -vif
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

check() {
  cd ${srcdir}/${pkgname}/${pkgname}
}

package() {
  cd ${srcdir}/${pkgname}/${pkgname}
  make DESTDIR=${pkgdir} install
}

